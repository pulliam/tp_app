<img src="<%= @user.avatar_url %>"><p>

  <p>Welcome <%= @user.name %> !</p>
  Username: <%= @user.username %> | E-mail: <%= @user.email %>
  <br><br>
 
<table class="table table-responsive table-hover">
	<tbody>
	  <p><strong>View Your Accounts:</strong></p>
	 	<% @accounts.each do |account| %>
		  <tr>
  	    <td><%= link_to account.account_name, user_account_path(@user, account) %></td>
  	    <td><%= link_to 'Edit Account', edit_user_account_path(@user, account) %></td>
        <td><%= link_to 'View Account Details', user_account_path(@user, account) %></td>
        <td style="color: #337ab7;">$<%= account.amount %></td>
      </tr>
 		<% end %>
      <tr>
        <td style="color: #337ab7;"><strong>Total:</strong></td>
        <td></td>
        <td></td>
        <td style="color: #337ab7;"><strong>$<%= @total_amount %></strong></td>
      </tr>
 	</tbody>
</table>

<br><br>
